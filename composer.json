{
    "name": "arnedesmedt/api-platform-event-engine-bundle",
    "type": "symfony-bundle",
    "description": "A library that creates a bridge between API Platform and Event Engine.",
    "homepage": "https://github.com/arnedesmedt/api-platform-event-engine-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Arne De Smedt",
            "email": "arnedesmdt@gmail.com",
            "homepage": "https://github.com/arnedesmedt"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "api-platform/core": "~3.0",
        "arnedesmedt/event-engine-symfony-bundle": "~0.1",
        "arnedesmedt/json-immutable-objects": "~0.1",
        "chrisguitarguy/request-id-bundle": "~5.0",
        "symfony/security-core": "^6.2"
    },
    "require-dev": {
        "doctrine/coding-standard": "~11.0",
        "jetbrains/phpstorm-attributes": "~1.0",
        "phpmd/phpmd": "^2.14",
        "phpro/grumphp": "~1.0",
        "phpstan/phpstan": "~1.0",
        "phpunit/phpunit": "^10.3",
        "rector/rector": "~0.1",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "~3.0"
    },
    "autoload": {
        "psr-4": {
            "ADS\\Bundle\\ApiPlatformEventEngineBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ADS\\Bundle\\ApiPlatformEventEngineBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpro/grumphp": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts-descriptions": {
        "tests": "Run all tests"
    },
    "scripts": {
        "tests": [
            "vendor/bin/phpcs",
            "vendor/bin/phpstan analyze --no-progress",
            "vendor/bin/phpmd src text phpmd.xml",
            "vendor/bin/phpmd tests text phpmd-tests.xml",
            "vendor/bin/rector --dry-run --no-progress-bar",
            "vendor/bin/phpunit"
        ]
    }
}
